<% layout('/layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST" novalidate
                class="validated" enctype="multipart/form-data">
                <div class="mb-2">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="title" value=<%=campground.title %>
                    required>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="location" value=<%=campground.location
                        %> required>
                </div>
                <div class="mb-2">
                    <label for="formFileMultiple" class="form-label">Add Images</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="img" multiple>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" name="price"
                            value=<%=campground.price %> required>
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="description">Description</label>
                    <textarea rows="6" class="form-control" type="text" id="description" name="description"
                        required><%= campground.description %></textarea>
                </div>
                <button class="btn btn-success mt-2">Update</button>
                <a class="btn btn-secondary mt-2" href="/campgrounds/<%= campground._id %>">Back</a>
                <div>
                    <% for (let img of campground.img) { %>
                        <div class="mt-3 mb-2 ms-2 d-inline-block">
                            <img class="d-block" src="<%= img.thumbnail %> " alt="">
                            <input type="checkbox" id="<%= img._id %>" name="deleteImg[]"
                                    value="<%= img.filename %>">
                            <label for="<%= img._id %>">Delete?</label>
                        </div>
                        <% } %>
                </div>
            </form>
        </div>

    </div>